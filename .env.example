# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=change_this_password_in_production

# JWT Configuration
JWT_SECRET=change_this_to_a_strong_random_secret_256_bits_minimum
JWT_EXPIRES_IN=30d

# Third-Party OTP Service (SMS Lab)
OTP_SERVICE_URL=http://sms.smslab.in/api/sendhttp.php
OTP_SERVICE_AUTH_KEY=your-auth-key-here
OTP_SERVICE_SENDER=SENDER
OTP_SERVICE_ROUTE=4
OTP_SERVICE_COUNTRY=91
OTP_SERVICE_DLT_TEMPLATE_ID=your-dlt-template-id-here
OTP_SERVICE_TIMEOUT=10000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Admin Configuration
ADMIN_PHONE=+1234567890

# Payment Gateway Configuration (UPIGateway)
# Sign up at https://upigateway.com to get your merchant credentials
UPIGATEWAY_MERCHANT_KEY=your_merchant_key_here
UPIGATEWAY_WEBHOOK_SECRET=your_webhook_secret_here
UPIGATEWAY_CALLBACK_URL=https://your-domain.com/api/webhooks/upigateway

# Payment Configuration
PAYMENT_CURRENCY=INR
PAYMENT_ENABLED=true
PAYMENT_ORDER_EXPIRY=900
PAYMENT_ORDER_NOTES_PREFIX=Restaurant Order

# Firebase Cloud Messaging Configuration
# Download service account JSON from Firebase Console:
# 1. Go to https://console.firebase.google.com
# 2. Select your project
# 3. Go to Project Settings > Service Accounts
# 4. Click "Generate new private key"
# 5. Save the downloaded JSON file as: app/config/firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json
