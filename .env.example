# Application
NODE_ENV=development
PORT=3000

# Database
DB_HOST=db
DB_PORT=5432
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=change_this_password_in_production

# JWT Configuration
JWT_SECRET=change_this_to_a_strong_random_secret_256_bits_minimum
JWT_EXPIRES_IN=30d

# Third-Party OTP Service
OTP_SERVICE_URL=https://api.otpservice.com
OTP_SERVICE_API_KEY=your_otp_service_api_key_here
OTP_SERVICE_TIMEOUT=10000

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080

# Admin Configuration
ADMIN_PHONE=+1234567890

# Payment Gateway Configuration (Razorpay)
RAZORPAY_KEY_ID=rzp_test_xxxxxxxxxxxxx
RAZORPAY_KEY_SECRET=your-razorpay-secret-here
RAZORPAY_WEBHOOK_SECRET=your-webhook-secret-here
PAYMENT_CURRENCY=INR
PAYMENT_ENABLED=true
PAYMENT_ORDER_EXPIRY=900

# Use Mock Payment Service (set to true for testing without real Razorpay credentials)
PAYMENT_USE_MOCK=false
