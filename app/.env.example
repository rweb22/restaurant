# Application
NODE_ENV=development
PORT=3000

# Database (localhost since running natively, not in Docker)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=restaurant_db
DB_USER=restaurant_user
DB_PASSWORD=restaurant_password

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRES_IN=30d

# Third-Party OTP Service (2Factor.in)
# Set USE_MOCK_OTP=false to enable real OTP via 2Factor.in
# Get your API key from https://2factor.in/
USE_MOCK_OTP=true
OTP_SERVICE_URL=https://2factor.in/API/V1
OTP_SERVICE_API_KEY=your-api-key-here
OTP_SERVICE_TIMEOUT=10000

# 2Factor.in SMS Template Name (optional)
# If you're receiving voice calls instead of SMS, you need to:
# 1. Login to https://2factor.in/CP/
# 2. Navigate to: OTP Services > Manage > Manage OTP Templates
# 3. Create an SMS template and enter its name below
# Leave empty to use default (may result in voice calls if account default is voice)
OTP_SMS_TEMPLATE_NAME=

# CORS (Allow all origins for local development)
# Including common Expo web ports and localhost variations
# Client app: 8081, 19000, 19006
# Admin app: 8082, 19001, 19007
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8081,http://localhost:8082,http://localhost:19000,http://localhost:19001,http://localhost:19006,http://localhost:19007,http://127.0.0.1:8081,http://127.0.0.1:8082,http://127.0.0.1:19000,http://127.0.0.1:19001,http://127.0.0.1:19006,http://127.0.0.1:19007,exp://localhost:8081,exp://localhost:8082

# Admin Configuration
ADMIN_PHONE=+911234567890

# Payment Gateway Configuration (UPIGateway)
# Get your keys from https://upigateway.com/merchant/dashboard
UPIGATEWAY_MERCHANT_KEY=your-merchant-key-here
# Webhook secret and callback URL are optional for testing (polling will work without them)
UPIGATEWAY_WEBHOOK_SECRET=test_webhook_secret_not_required_for_polling
UPIGATEWAY_CALLBACK_URL=https://test1.com
# Test mode - simulates UPIGateway responses without calling actual API (for testing without real account)
UPIGATEWAY_TEST_MODE=false

# Payment Configuration
PAYMENT_CURRENCY=INR
PAYMENT_ENABLED=true
PAYMENT_ORDER_EXPIRY=900
PAYMENT_ORDER_NOTES_PREFIX=Restaurant Order

# Firebase Cloud Messaging Configuration
# Download service account JSON from Firebase Console:
# 1. Go to https://console.firebase.google.com
# 2. Select your project
# 3. Go to Project Settings > Service Accounts
# 4. Click "Generate new private key"
# 5. Save the downloaded JSON file as: app/config/firebase-service-account.json
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

